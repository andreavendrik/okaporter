breakpoint4 = 600px
breakpoint3 = 700px
breakpoint2 = 870px
breakpoint1 = 1100px
blue = #363ED3
lightblue = #EAEBFF
pink = #FFCAD8
lightpink = #F9D8DF
grey = #E6E6E6
green = #3ACAAC

@font-face
  font-family 'HK Grotesk'
  src: url('fonts/hkgrotesk-regular-webfont.woff') format('woff'),
       url('fonts/HKGrotesk-Regular.ttf') format('truetype');
  font-style normal
  font-weight normal
  text-rendering optimizeLegibility

@font-face
  font-family 'HK Grotesk'
  src: url('fonts/hkgrotesk-bold-webfont.woff') format('woff'),
       url('fonts/HKGrotesk-Bold.ttf') format('truetype');
  font-style bold
  font-weight bold
  text-rendering optimizeLegibility

titletext(font-size=50px,line-height=45px,text-transform=uppercase)
  text-transform text-transform
  font-size font-size
  line-height line-height

bodytext(font-size=18px,line-height=28px,font-weight=normal)
  font-family 'HK Grotesk'
  font-size font-size
  line-height line-height
  font-weight font-weight

tagtext(font-size=14px,font-weight=bold,line-height=14px,text-transform=none)
  text-transform text-transform
  font-size font-size
  line-height line-height
  letter-spacing 0.5px
  font-weight font-weight

*
  padding 0
  margin 0

body
  bodytext()
  width 100%

a, a:hover, a:visited, a:active
  color blue

h1
  titletext()

h2
  &.post-title
    a
      color black
      text-decoration none

h3
  titletext(30px,40px,auto)
  margin-top 50px

h4
  tagtext(,,,uppercase)
  margin-top 25px
  margin-bottom 5px

.button_wrapper
  width 100%
  min-width 250px
  background-color blue
  color white
  border 0
  padding 24px
  tagtext(16px,normal)
  box-shadow 0px 0px 4px 0px rgba(0,0,0,0.3)
  cursor pointer
  img
    height 15px
    margin-left 5px

@media only screen and (max-width:breakpoint3)
  .button_wrapper
    margin-top 20px
    width calc(100vw - 60px)

#button_shops_on_map
  background-color #FFADC3

.button_wrapper:hover, #button_shops_on_map:hover
  transition 0.3s
  background-color black

.brand-introduction-buttons
  flex 1
  -webkit-flex 1
  -ms-flex 1
  display flex
  flex-wrap wrap
  justify-content flex-start

@media only screen and (max-width:breakpoint3)
  .brand-introduction-buttons
    justify-content space-between

.menu
  display flex
  width 100%
  list-style-type none

.menu-item
  margin 5px 10px

.main-navigation
  background-color blue
  justify-content center
  align-items center
  padding 5px 20px
  display flex
  height 60px
  box-sizing border-box
  position fixed
  z-index 100
  width 100%
  top 0
  left 0
  transition all 0.5s
  a
    color white
    text-decoration none
    tagtext()
    flex 1
    margin-right 20px
    transition all 0.5s
    &:hover
      color pink
    img
      height 45px
      margin-right auto
      display none

.main-navigation.active
  box-shadow 0px 0px 5px 0px rgba(0,0,0,0.5)
  background-color white
  img
    display block
  a
    color black
    &:hover
      color blue
  
.site-title
  background-color blue
  text-align center
  width 100%
  img
    margin 80px auto 30px 

.site-title-description
  display block
  margin-top 3px
  margin-bottom 50px
  tagtext(,normal)

.site-title-logo
  display block
  img
    width 280px

.brand-header
  position relative
  max-height 70vh
  overflow hidden
  img
    width 100%
    height 100%

@media only screen and (max-width:breakpoint3)
  .brand-header
      max-height 90vh

#brand-title
  background-color white
  padding 18px 18px 23px
  position absolute
  height 85px
  top -140px
  left 25px
  min-width 350px
  box-sizing border-box
@media only screen and (max-width:breakpoint3)
  .brand-title
    width 100%
    position absolute
    left 0px
    top -70px
    background-color grey

#post-tag-single
  top -173px
  bottom auto
  background-color pink

.brand-wrapper
  display flex
  flex-wrap wrap
  margin auto
  max-width 1000px
  position relative
  padding 60px 25px

@media only screen and (max-width:breakpoint3)
  .brand-wrapper
    display block
    padding 40px 25px

.brand-introduction
  display flex
  flex-wrap wrap

@media only screen and (max-width:breakpoint3)
  .brand-introduction
    display block

.brand-introduction-text
  flex 2
  -webkit-flex 2
  -ms-flex 2
  margin-right 50px
  flex-shrink 0

@media only screen and (max-width:breakpoint3)
  .brand-introduction-text
    width 100%
    margin-right 0px

.brand-content
  display flex
  flex-wrap wrap

@media only screen and (max-width:breakpoint3)
  .brand-content
    display block

.brand-content-main
  flex 2
  -webkit-flex 2
  -ms-flex 2
  margin-right 50px
  flex-shrink 0
  h3
    margin-bottom 35px

@media only screen and (max-width:breakpoint3)
  .brand-content-main
    flex none
    -webkit-flex none
    -ms-flex none
    width 100%
    margin-right 0px

.brand-content-story
  flex 2
  -webkit-flex 2
  -ms-flex 2
  margin-right 50px
  flex-shrink 0

@media only screen and (max-width:breakpoint3)
  .brand-content-story
    flex none
    -webkit-flex none
    -ms-flex none
    width 100%
    margin-right 0px

.brand-content-story-empty
  flex 1
  -webkit-flex 1
  -ms-flex 1
  flex-shrink 0

.brand-content-metadata
  flex 1
  -webkit-flex 1
  -ms-flex 1
  flex-shrink 0
  h3
    flex 0 0 100%
    margin-bottom 35px

.brand-content-labels
  display flex
  margin-top 25px
  align-items center
  flex-wrap wrap
  h4
    margin-top 0px

.labels-text
  flex 4
  -webkit-flex 4
  -ms-flex 4
  p
    margin-top 20px
    &:first-of-type
      margin-top 0px

.labels-image
  flex 1
  -webkit-flex 1
  -ms-flex 1
  margin-right 20px
  text-align center

.filter
  tagtext()
  margin-left 15px
  position relative

.filter-section
  width 100%
  display flex
  justify-content flex-end
  margin-top 40px

.filter-toggle
  &:hover
    background-color blue
    color white
    svg
      g
        g
          fill white
  width 200px
  padding 15px
  background-color grey
  cursor pointer
  position relative
  box-sizing border-box
  display flex
  justify-content space-between
  transition all 0.1s
  tagtext(13px,,,capitalize)
  svg
    transition all 0.1s
    g
      g
        fill black

.filter-toggle.filter-toggle-active
  color white
  background-color blue
  box-shadow 0px 0px 5px 0px rgba(0,0,0,0.3)
  svg
    transform rotate(180deg)
    transform-origin 50% 50%
    g
      g
        fill white
   
.filter-dropdown
  display none
  box-sizing border-box
  background-color grey
  position absolute
  z-index 100
  width 200px
  tagtext(14px,normal)  
  box-shadow 0px 0px 5px 0px rgba(0,0,0,0.3)
  li
    display inline 
    ul
      width 100%
      label
        padding 5px 10px 15px
        border-bottom 1px solid rgba(0,0,0,0.1)
  input[type=checkbox]
    width 12px
    height 12px
    margin-right 5px
    appearance none
    -moz-appearance none
    -webkit-appearance none
    -o-appearance none
    -ms-appearance none
    background-color white
    border 1px solid blue
    position relative
  input[type=submit]
    justify-content center
    align-items center
  input[type=checkbox]:checked
    &:after
      position absolute
      top 1px
      left 1px
      right 1px
      bottom 1px
      content ''
      background-image: embedurl("../../../wp-content/uploads/2016/11/Ã—.svg", "utf8");
      background-size cover
      color red
  input
    tagtext(13px,bold)
    width 200px
    height 45px
    border 0px
    background-color white
    color blue
    text-align center

#main-index
  display flex
  flex-wrap wrap
  justify-content space-between
  margin auto
  max-width 1200px

.post
    width calc(32.5%)
    position relative
    margin 20px 0

@media only screen and (max-width:breakpoint4)
  .post
      max-width 100%
      margin 0px 0px 20px 0px

.post-thumbnail
  width 100%
  max-height 480px
  margin 0
  position relative
  overflow hidden
  background-color grey
  cursor pointer
  transition all 1s
  img
    transition background-color 1s   
    width 102%
    height 100%
  &:hover
    background-color lightblue    
    img
      opacity 0.8
      mix-blend-mode overlay    
    .thumbnail_labels_wrapper
      visibility visible
      opacity 1
      img
        opacity 1
        mix-blend-mode normal
        
@media only screen and (max-width:breakpoint4)
  .post-thumbnail
    max-height auto
    img
      width 100vw
      height 100%

.post-tag
  tagtext(13px,,,uppercase)
  background-color white
  padding 10px
  position absolute
  bottom 0px
  height 35px
  box-sizing border-box
  a
    color black
    text-decoration none
    cursor auto

.post-title
  titletext(42px,35px)    
  padding 18px 18px 23px
  background-color grey
  white-space nowrap
  text-overflow ellipsis
  overflow hidden

.thumbnail_labels_wrapper
  display flex
  visibility hidden
  opacity 0
  transition visibility 0s, opacity 1s
  flex-direction column
  width 100%
  position absolute
  top 20%
  tagtext(14px,bold,,uppercase)
  img
    width 17px
    max-height 20px
    margin-right 15px
  hr
    border-top: 1px solid blue;
    width 100px
    position relative
    top 35px
    left calc(50% - 50px)

.thumbnail_label
  height 35px
  text-align center
  display flex
  align-items center
  justify-content center
  flex-direction column
  padding 30px
  &:last-of-type
    hr
      display none
      
.label
  display flex  

.label_information_button
  input
    position fixed
    bottom 40px
    right 40px
    width 50px
    height 50px
    background-color blue
    color white
    font-size 20px
    border-radius 100px
    border 0px
    text-align center
    box-shadow 0px 0px 3px 1px rgba(0,0,0,0.3)

#label_information
  display none
  position fixed
  background-color white
  bottom 120px
  right 40px
  font-size 14px
  width 200px
  box-shadow 0px 0px 3px 1px rgba(0,0,0,0.3)
  &::before
    transform rotate(45deg)
    width 20px
    box-shadow 0px 0px 3px 1px rgba(0,0,0,0.3)
    background-color white
    height 20px
    bottom -10px
    content ""
    position absolute
    right 15px
  &::after
    background-color white
    height 15px
    bottom 0px
    left 0px
    right 0px
    content ""
    position absolute
  p
    height 40px
    padding 0px 15px
    display flex
    align-items center
    &:first-of-type
      background-color pink
      color black
      letter-spacing 0.5px
      font-weight bold
      padding-top 5px
    &:last-of-type
      margin-bottom 5px
  img
    width 20px
    margin-right 10px

.page-content
  width 600px
  margin-top 30px
  padding 20px
  bodytext()
  div
    text-align center
  img
    border-radius 100px
    -webkit-filter: grayscale(100%); /* Safari 6.0 - 9.0 */
    filter: grayscale(100%);
    width 200px
    height 200px
    padding 10px
    box-sizing border-box
    margin-top 20px

.page-content p
  margin-top 20px

.page-content ul
  list-style-position disc outside none
  padding-left 20px

.s2
  tagtext(,sentencecase,18px)
  display block

.p1
  &:first-of-type .s2
    background-color pink
    padding 10px

.p1
  &:last-of-type .s2
    color black
    margin-bottom 30px

